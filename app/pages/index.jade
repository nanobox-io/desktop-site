extends templates/base

block js
  // build:home /js/home.js
  script(src="/js/Home.js")
  // endbuild
  
  script(type="text/javascript").
    downloads = new nbx.Home( $(".home") );

block content
  .home
    .section
      h1 Local Development Done Right
      .manifesto
        .point
          .svg-holder
            img.shadow-icon(data-src="manifesto-parity" )
          p Parity between development and production
        .point.config
          .svg-holder
            img.shadow-icon(data-src="manifesto-automation" )
          p Automated environment configuration
        .point.clean
          .svg-holder
            img.shadow-icon(data-src="manifesto-virtualization" )
          p Keep your local machine clean via virtualization
      .buttons
        a.demo-video()
          img.shadow-icon(data-src="video-play" )
          p View Demo
        a.github(href="//github.com/nanobox-io?utf8=âœ“&query=nanobox")
          img.shadow-icon(data-src="git" )
          p Fork me on github
        a.download(href="/downloads")
          img.shadow-icon(data-src="download-home" )
          p Download
          
          
    .section-summary.eliminate-complexity
      h1 Eliminate Environment Complexity
      h2 Your app is launched in a lightweight VM that is consistent across local and production machines
    .overview 
      .info
        .blurb.src-code
          h2 <span>1 </span>App Source Code
          p Focus on coding rather than configuring a local dev environment 
        .blurb.engine
          h2 <span>2 </span>Language Engine
          p The Engine detects your app type and specifies what services your app needs (ruby, mongo, etc) and how they should be configured.
        .blurb.docker
          h2 <span>3 </span>Docker Containers 
          p Containers are configured and initialized. Your code is then built and installed. 
        .blurb.vagrant
          h2 <span>4 </span>Vagrant / Virtual Box
          p Your services run in an ultra lightweight linux virtual machine (30mb RAM).  Requests to localhost are proxied to your app
      .graphic
        img.shadow-icon(data-src="sandwich" scalable="true" lock-to-max="true")
      a.jumper(href="/how-nanobox-works/") 
       div How it works
       img.shadow-icon(data-src="jumper-arrow")

    .section-summary
      h1 Just Code
      h2 Nanobox detects your app type and automatically configures the environment and installs everything your app needs to run
    .mini-overview
      .mini
        //- h2 Run Your App
        //- p Build your code and preview your app in a fast lightweight VM
        .script
          pre
            code.language-nanobox
              | $ nanobox run 
              | Launching Vagrant Virtual Machine
              | Detecting app type
              | Installing runtimes in VM
              | etc..
        //- a(href="#developing-your-app") How it works
      
      .mini
        //- h2 Develop Your App
        //- p Run generators, tests and iterate in an isolated sandbox
        .script
          pre
            code.language-nanobox
              | $ nanobox dev 
              | Entering virtual machine context:
              | $ rails s # development server 
        //- a(href="#developing-your-app") How it works
        
